<form action= '/peeps' method='post'>
  <div>
    <label for="peep">Write a peep:</label>
    <input type="text" name="peep" />
  </div>
  <div class="button">
    <button type= "submit">Peep</button>
  </div>
</form>

<ul id="peeps">
  <% @peeps.each do |peep| %>
    <li>
      Peep: <%= peep.peep %>
    </li>
  <% end %>
</ul>
